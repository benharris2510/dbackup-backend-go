# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
ENV=development

# Database Configuration
DATABASE_URL=postgres://dbackup:dbackup@localhost:5432/dbackup_dev?sslmode=disable
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_CONNECTION_MAX_LIFETIME=5m

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=168h
JWT_REFRESH_TOKEN_EXPIRES=720h

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# Encryption
MASTER_ENCRYPTION_KEY=your-32-byte-encryption-key-here-change-this

# OAuth Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8080/api/auth/google/callback

# S3 Configuration
DEFAULT_S3_ENDPOINT=https://s3.amazonaws.com
DEFAULT_S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=false

# Backup Configuration
MAX_BACKUP_SIZE=10737418240
BACKUP_RETENTION_DAYS=30
MAX_CONCURRENT_BACKUPS=5
BACKUP_TIMEOUT=3600s

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# WebSocket Configuration
WEBSOCKET_READ_BUFFER_SIZE=1024
WEBSOCKET_WRITE_BUFFER_SIZE=1024
WEBSOCKET_PING_PERIOD=54s
WEBSOCKET_PONG_WAIT=60s