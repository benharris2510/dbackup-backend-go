# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
ENV=development
PORT=8080
GO_ENV=development

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@postgres:5432/dbackup?sslmode=disable
DATABASE_NAME=dbackup
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_CONNECTION_MAX_LIFETIME=5m

# JWT Configuration
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=168h
JWT_REFRESH_TOKEN_EXPIRES=720h

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# Encryption
MASTER_ENCRYPTION_KEY=dev-master-key-32-chars-long1234
ENCRYPTION_MASTER_KEY=dev-master-key-32-chars-long1234

# OAuth Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8080/api/auth/google/callback

# S3 Configuration
DEFAULT_S3_ENDPOINT=https://s3.amazonaws.com
DEFAULT_S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=false

# Backup Configuration
MAX_BACKUP_SIZE=10737418240
BACKUP_RETENTION_DAYS=30
MAX_CONCURRENT_BACKUPS=5
BACKUP_TIMEOUT=3600s

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# WebSocket Configuration
WEBSOCKET_READ_BUFFER_SIZE=1024
WEBSOCKET_WRITE_BUFFER_SIZE=1024
WEBSOCKET_PING_PERIOD=54s
WEBSOCKET_PONG_WAIT=60s

# Docker Compose Configuration
# MinIO Configuration (for development S3 storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# MySQL Test Database (for testing MySQL backups)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=testdb
MYSQL_USER=testuser
MYSQL_PASSWORD=testpass

# Production Configuration
API_PORT=8080
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_admin_password_change_this

# SSL Configuration (production only)
SSL_CERT_PATH=/etc/ssl/certs/domain.crt
SSL_KEY_PATH=/etc/ssl/private/domain.key

# Email/SMTP Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# AWS Configuration (production S3 storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET=your-backup-bucket-name