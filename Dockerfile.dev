# Development Dockerfile with hot reload support
FROM golang:1.24-alpine

# Install development dependencies
RUN apk add --no-cache \
    git \
    ca-certificates \
    tzdata \
    postgresql-client \
    mysql-client \
    curl \
    bash \
    vim \
    make \
    gcc \
    musl-dev

# Install air for hot reloading and delve for debugging  
RUN go install github.com/air-verse/air@latest && \
    go install github.com/go-delve/delve/cmd/dlv@latest

# Create app directory
WORKDIR /app

# Copy go mod and sum files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Create non-root user
RUN addgroup -g 1001 -S appgroup && \
    adduser -u 1001 -S appuser -G appgroup -s /bin/bash

# Create build cache directory and change ownership
RUN mkdir -p /tmp/go-build && \
    chown -R appuser:appgroup /app /tmp/go-build

# Switch to non-root user
USER appuser

# Expose port for the application and debug port
EXPOSE 8080 2345

# Set environment variables for development
ENV GO_ENV=development \
    PORT=8080 \
    LOG_LEVEL=debug \
    CGO_ENABLED=0 \
    GOCACHE=/tmp/go-build

# Copy air config and startup script (files copied above with source code)
RUN chmod +x /app/start.sh

# Start with the startup script
CMD ["/app/start.sh"]